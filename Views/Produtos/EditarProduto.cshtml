@model street.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>Editar Produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarProduto" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control" type="number" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="novaImagemProduto" class="control-label">Nova Foto do Produto (opcional):</label>
                <input type="file" id="novaImagemProduto" name="novaImagemProduto" accept="image/*" class="form-control" />
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <p>Imagem atual:</p>
                    <img src="@Model.ImageUrl" alt="@Model.Nome" width="100" />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListaProdutosCompleta">Voltar para a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}