    @model List<street.Models.Produto>

@{
    ViewData["Title"] = "Catálogo de Produtos - SS Moda";
    Layout = "_Layout";
}
<main role="main">
    <section class="products-section">
        <h1>Confira Nossos Produtos</h1>
        <div class="products-grid">
            @if (Model != null && Model.Any())
            {
                foreach (var produto in Model.Take(8))
                {
                    <div class="product-item">
                        <a asp-controller="Produtos" asp-action="DetalheProduto" asp-route-id="@produto.Id" class="product-link">
                            <img src="@produto.ImageUrl" alt="@produto.Nome" class="product-image-placeholder" style="width: 100%; height: 296px; object-fit: cover; overflow: hidden;">
                        </a>
                        <p class="product-name">@produto.Nome</p>
                        <p class="product-price">R$ @produto.Preco.ToString("N2")</p>
                    </div>
                }
            }
            else
            {
                <p class="col-12 text-center">Nenhum produto disponível no momento. Por favor, adicione produtos ao banco de dados.</p>
            }
            <div class="product-item">
                <a asp-controller="Produtos" asp-action="DetalheProduto" asp-route-id="" class="product-link">
                    <img src="~/img/moletom_nike_streetware.jpg" alt="Moletom Nike" class="product-image-placeholder" style="width: 100%; height: 296px; object-fit: cover;">
                </a>
                <p class="product-name">Moletom Nike</p>
                <p class="product-price">R$ R$799,99</p>
            </div>
        </div>
        <a asp-controller="Produtos" asp-action="ListaProdutosCompleta" class="btn-more-products">
            Mais Produtos <i class="fas fa-arrow-right arrow-icon"></i>
        </a>
    </section>

    <section class="gallery-section">
        <div class="gallery-grid">
            <div class="gallery-item">
                <img src="~/img/categoriaAcessorios.jpg" alt="Calçados modernos" class="gallery-image">
            </div>
            <div class="gallery-item">
                <img src="~/img/categoriaCalcado.jpg" alt="Relógio estiloso" class="gallery-image">
            </div>
            <div class="gallery-item">
                <img src="~/img/moletomMulher.jpg" alt="Mulher com moletom street" class="gallery-image">
            </div>
        </div>
    </section>

    <section class="offers-section">
        <h2 class="section-title offers-title">OFERTAS<span class="da-semana"> <br>DA SEMANA</span></h2>

        <div class="products-grid">
            @if (Model != null && Model.Any())
            {
                @foreach (var produtoOferta in Model.Take(4))
                {
                    <div class="product-item">
                        <a asp-controller="Produtos" asp-action="DetalheProduto" asp-route-id="@produtoOferta.Id" class="product-link">
                            <img src="@produtoOferta.ImageUrl" alt="@produtoOferta.Nome" class="product-image-placeholder" style="width: 100%; height: 200px; object-fit: cover;">
                        </a>
                        <p class="product-name">@produtoOferta.Nome</p>
                        <p class="product-price">R$ @produtoOferta.Preco.ToString("N2")</p>
                    </div>
                }
            }
            else
            {
                <p class="col-12 text-center">Nenhuma oferta disponível no momento.</p>
            }
        </div>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <br>
        <img src="~/img/marcas.png" class="marcas" alt="Marcas Parceiras">
    </section>
</main>