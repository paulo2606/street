@model street.Models.LoginModel 

<div id="loginModal" class="modal-overlay">
    <div class="form-card modal-content">
        <button class="modal-close-btn">&times;</button>
        <h2 class="form-title">Entrar</h2>

        <p class="or-separator">Use seu email e senha:</p>

        <form asp-controller="Conta" asp-action="Login" method="post" class="main-form">
            <div asp-validation-summary="All" class="text-danger validation-summary"></div>

            <div class="form-group-custom">
                <i class="fas fa-envelope icon"></i>
                <input asp-for="Email" class="form-control-custom" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger validation-message"></span>
            </div>

            <div class="form-group-custom">
                <i class="fas fa-lock icon"></i>
                <input asp-for="Password" class="form-control-custom" placeholder="Senha" type="password" />
                <span asp-validation-for="Password" class="text-danger validation-message"></span>
            </div>

            <div class="form-group-custom checkbox-group">
                <input asp-for="RememberMe" type="checkbox" id="RememberMe" />
                <label asp-for="RememberMe" class="checkbox-label">Lembrar-me</label>
            </div>
            
            <a asp-controller="Conta" asp-action="ForgotPassword" class="forgot-password-link">Esqueceu sua senha?</a>

            <button type="submit" class="btn-submit btn-login">ENTRAR</button>
            
        </form>

        <p class="form-footer-link">Não tem uma conta? <a id="switchToCadastroModalLink" href="#">Cadastre-se</a></p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}